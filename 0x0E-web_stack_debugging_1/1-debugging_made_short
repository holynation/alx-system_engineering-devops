#!/usr/bin/env bash
#Requirement: Nginx must be running, and listening on port 80 of all the serverâ€™s active IPv4 IPs
#Bug: sudo nginx status returns 'not running'; netstat -lpn does not show port 80
#Solution: https://stackoverflow.com/questions/16021481/nginx-not-listening-to-port-80

#rm /etc/nginx/sites-enabled/default
#ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default
#sudo service nginx restart

#!/usr/bin/env bash
# configures nginx to run and listen to port 80
sed -i "s/8080/80/g" /etc/nginx/sites-enabled/default
service nginx restart
echo "" > /run/nginx.pid
